      <%= form_with url: terapeuta_registros_clinico_path(@registro_clinico), method: :delete, local: true, class: "inline" do |f| %>
        <%= f.submit "Confirmar Exclus√£o", class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
