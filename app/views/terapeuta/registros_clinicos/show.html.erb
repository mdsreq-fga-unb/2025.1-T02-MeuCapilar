      <div class="mt-6 flex justify-end">
        <button
          onclick="document.getElementById('modal-detalhes-paciente').classList.add('hidden')"
          class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300"
        >
          Fechar
        </button>
      </div>
    </div>
