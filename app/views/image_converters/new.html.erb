<div class="max-w-2xl mx-auto my-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">Conversor de Imagens BMP para PNG</h1>
  
  <%= form_with(model: @image_converter, local: true, class: "space-y-6") do |form| %>
    <% if @image_converter.errors.any? %>
      <div class="bg-red-50 text-red-500 p-4 rounded-md mb-6">
        <h2 class="font-bold mb-2">Não foi possível processar:</h2>
        <ul class="list-disc list-inside">
          <% @image_converter.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Nome do lote de imagens", class: "block mb-2 font-medium text-gray-700" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :original_images, "Selecione até 10 imagens BMP", class: "block mb-2 font-medium text-gray-700" %>
      <div class="border-2 border-dashed border-gray-300 rounded-md p-6 text-center hover:bg-gray-50 transition duration-150">
        <%= form.file_field :original_images, multiple: true, 
                            accept: "image/bmp", 
                            direct_upload: true,
                            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100" %>
        <p class="mt-1 text-xs text-gray-500">Apenas arquivos BMP. Máximo de 10 imagens.</p>
      </div>
    </div>

    <div class="flex justify-center">
      <%= form.submit "Converter imagens", class: "px-6 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <%= link_to "Voltar para lista", image_converters_path, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>
</div> 