<div class="max-w-7xl mx-auto my-8 px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Conversões de Imagens</h1>
    <%= link_to "Nova conversão", new_image_converter_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
  </div>

  <% if @image_converters.any? %>
    <div class="bg-white shadow overflow-hidden rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @image_converters.each do |converter| %>
          <li class="px-6 py-4 hover:bg-gray-50">
            <%= link_to image_converter_path(converter), class: "block" do %>
              <div class="flex items-center justify-between">
                <div>
                  <p class="font-medium text-gray-900"><%= converter.name.presence || "Conversão ##{converter.id}" %></p>
                  <p class="text-sm text-gray-500">
                    <%= converter.original_images.count %> imagens • 
                    <%= converter.created_at.strftime("%d/%m/%Y às %H:%M") %>
                  </p>
                </div>
                <div class="flex items-center text-indigo-600">
                  <span>Ver detalhes</span>
                  <svg class="ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-md p-6 text-center">
      <p class="text-gray-600 mb-4">Nenhuma conversão de imagem encontrada.</p>
      <%= link_to "Iniciar uma conversão", new_image_converter_path, class: "inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
    </div>
  <% end %>
</div> 