<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50">
  <header class="bg-white shadow-sm">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <span class="text-2xl font-bold text-pink-600">MeuCapilar</span>
          <span class="ml-4 text-gray-500">| Cadastrar Paciente</span>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-gray-700"><%= current_user.name %></span>
          <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-pink-600 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </nav>
  </header>

  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
          <div>
            <h2 class="text-lg leading-6 font-medium text-gray-900">Cadastrar Novo Paciente</h2>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">Preencha os dados do paciente para registrá-lo no sistema.</p>
          </div>
          <%= link_to "Voltar", patients_path, class: "text-pink-600 hover:text-pink-800" %>
        </div>
      </div>

      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <%= form_with(model: @patient, local: true, class: "space-y-6") do |f| %>
            <% if @patient.errors.any? %>
              <div class="bg-red-50 p-4 rounded-md mb-6">
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      <%= pluralize(@patient.errors.count, "erro") %> impediu o cadastro:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc pl-5 space-y-1">
                        <% @patient.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <div>
              <%= f.label :name, "Nome Completo", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm", required: true %>
            </div>

            <div>
              <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm", required: true %>
            </div>

            <div>
              <%= f.label :date_of_birth, "Data de Nascimento", class: "block text-sm font-medium text-gray-700" %>
              <%= f.date_field :date_of_birth, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm" %>
            </div>

            <div>
              <%= f.label :medical_history, "Histórico Médico", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_area :medical_history, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm" %>
            </div>

            <div class="flex justify-end">
              <%= f.submit "Cadastrar Paciente", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div> 