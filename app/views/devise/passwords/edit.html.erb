<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50">
  <!-- Header simples -->
  <header class="bg-white shadow-sm">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path do %>
            <span class="text-2xl font-bold text-pink-600">MeuCapilar</span>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Voltar ao início", root_path, class: "text-gray-700 hover:text-pink-600 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </nav>
  </header>

  <!-- Conteúdo principal -->
  <div class="py-12">
    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Título -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">
          Alterar sua senha
        </h1>
        <p class="mt-2 text-gray-600">
          Digite sua nova senha abaixo
        </p>
      </div>

      <!-- Formulário -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          
          <%= f.hidden_field :reset_password_token %>
          
          <!-- Mensagens de erro -->
          <% if resource.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <h3 class="text-sm font-medium text-red-800 mb-2">
                <%= pluralize(resource.errors.count, "erro") %> <%= resource.errors.count == 1 ? "impediu" : "impediram" %> a alteração:
              </h3>
              <ul class="text-sm text-red-700 list-disc pl-5 space-y-1">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Info sobre nova senha -->
          <div class="bg-green-50 border border-green-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-green-800">
                  Redefinição de Senha
                </h3>
                <p class="mt-1 text-sm text-green-700">
                  Crie uma nova senha segura para sua conta. Use pelo menos 6 caracteres.
                </p>
              </div>
            </div>
          </div>

          <!-- Nova senha -->
          <div>
            <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-1">Mínimo de <%= @minimum_password_length %> caracteres</p>
            <% end %>
            <%= f.password_field :password, 
                autofocus: true, 
                autocomplete: "new-password", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                placeholder: "Digite sua nova senha" %>
          </div>

          <!-- Confirmação da nova senha -->
          <div>
            <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                placeholder: "Confirme sua nova senha" %>
          </div>

          <!-- Botão de alteração -->
          <div>
            <%= f.submit "Alterar minha senha", 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
          </div>

          <!-- Links adicionais -->
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
