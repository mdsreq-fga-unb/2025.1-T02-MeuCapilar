<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50">
  <header class="bg-white shadow-sm">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path, class: "text-2xl font-bold text-pink-600" do %>
            MeuCapilar
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to root_path, class: "text-gray-700 hover:text-pink-600 px-3 py-2 rounded-md text-sm font-medium" do %>
            Home
          <% end %>
          <%= link_to sobre_path, class: "text-gray-700 hover:text-pink-600 px-3 py-2 rounded-md text-sm font-medium" do %>
            Sobre
          <% end %>
          <%= link_to contato_path, class: "text-pink-600 hover:text-pink-700 px-3 py-2 rounded-md text-sm font-medium font-semibold" do %>
            Contato
          <% end %>
          <%= link_to terapeuta_login_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700" do %>
            Login como Terapeuta
          <% end %>
        </div>
      </div>
    </nav>
  </header>

  <main class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900">
          <span class="text-pink-600">Contato</span>
        </h1>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Formulário -->
        <div class="bg-white rounded-lg shadow p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Envie sua mensagem</h2>
          
          <form class="space-y-4">
            <div>
              <label for="nome" class="block text-sm font-medium text-gray-700 mb-1">Nome</label>
              <input type="text" id="nome" name="nome" required
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-pink-500 focus:border-pink-500">
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
              <input type="email" id="email" name="email" required
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-pink-500 focus:border-pink-500">
            </div>

            <div>
              <label for="mensagem" class="block text-sm font-medium text-gray-700 mb-1">Mensagem</label>
              <textarea id="mensagem" name="mensagem" rows="4" required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-pink-500 focus:border-pink-500"></textarea>
            </div>

            <button type="submit"
                    class="w-full bg-pink-600 text-white py-2 px-4 rounded-md hover:bg-pink-700">
              Enviar mensagem
            </button>
          </form>
        </div>

        <!-- Informações -->
        <div class="bg-white rounded-lg shadow p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Informações</h2>
          
          <div class="space-y-4">
              <div class="flex items-start">
                <div class="bg-pink-100 rounded-lg p-3 mr-4">
                  <svg class="h-6 w-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"> E-mail</h3>
                  <p class="text-gray-600">meucapilar@gmail.com</p>
                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
  </main>
</div>