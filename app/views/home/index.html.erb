              </svg>
              <span class="text-sm font-medium text-gray-700">Sou Paciente</span>
            </button>
          </div>
          
          <!-- Formulário de Login -->
          <div id="login-form" class="<%= 'hidden' unless session[:user_type].present? %>">
            <%= form_with url: user_session_path, method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
              <%= hidden_field_tag :user_type, params[:user_type] || session[:user_type] %>
              
              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <%= f.email_field :email, name: "user[email]", autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm" %>
              </div>
              
              <div>
                <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, name: "user[password]", autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm" %>
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <%= f.check_box :remember_me, name: "user[remember_me]", class: "h-4 w-4 text-pink-600 focus:ring-pink-500 border-gray-300 rounded" %>
                  <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-900" %>
                </div>
                <div class="text-sm">
                  <%= link_to "Esqueci minha senha", new_user_password_path, class: "font-medium text-pink-600 hover:text-pink-500" %>
                </div>
              </div>
              
              <div>
                <%= f.submit "Entrar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500" %>
              </div>
            <% end %>
          </div>
          
          <!-- Mensagem informativa quando nenhum tipo está selecionado -->
          <div id="select-type-message" class="text-center py-6 <%= 'hidden' if session[:user_type].present? %>">
            <p class="text-gray-500">Por favor, selecione seu tipo de usuário para fazer login.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="bg-white py-12">
