    <!-- Login Section -->
    <div class="py-12 bg-white">
      <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-pink-50 rounded-xl p-6 sm:p-8 shadow-lg">
          <h3 class="text-2xl font-semibold text-pink-700 mb-6 text-center">Acesso ao Sistema</h3>
          
          <div id="user-type-selector" class="flex items-center justify-center gap-4 mb-6">
            <button id="therapist-btn" class="user-type-btn flex flex-col items-center p-4 rounded-lg border-2 border-transparent hover:border-pink-500 focus:outline-none focus:border-pink-500 w-1/2 transition-all shadow-sm <%= 'border-pink-500 bg-pink-100' if session[:user_type] == 'therapist' %>" data-type="therapist">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span class="text-sm font-medium text-gray-700">Sou Terapeuta</span>
            </button>
            
            <button id="patient-btn" class="user-type-btn flex flex-col items-center p-4 rounded-lg border-2 border-transparent hover:border-pink-500 focus:outline-none focus:border-pink-500 w-1/2 transition-all shadow-sm <%= 'border-pink-500 bg-pink-100' if session[:user_type] == 'patient' %>" data-type="patient">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-600 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
