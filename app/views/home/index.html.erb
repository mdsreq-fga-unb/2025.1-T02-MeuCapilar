<!-- JavaScript para alternar entre os tipos de usuário -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const therapistBtn = document.getElementById('therapist-btn');
    const patientBtn = document.getElementById('patient-btn');
    const loginForm = document.getElementById('login-form');
    const selectTypeMessage = document.getElementById('select-type-message');
    const userTypeField = document.querySelector('input[name="user_type"]');
    
    function setActiveUserType(type) {
      // Remover classes ativas de todos os botões
      document.querySelectorAll('.user-type-btn').forEach(btn => {
        btn.classList.remove('border-pink-500', 'bg-pink-100');
        btn.classList.add('border-transparent'); // Garante que a borda padrão seja transparente
      });
      
      // Adicionar classe ativa ao botão selecionado e remover transparente
      if (type === 'therapist' && therapistBtn) {
        therapistBtn.classList.add('border-pink-500', 'bg-pink-100');
        therapistBtn.classList.remove('border-transparent');
      } else if (type === 'patient' && patientBtn) {
        patientBtn.classList.add('border-pink-500', 'bg-pink-100');
        patientBtn.classList.remove('border-transparent');
      }
      
      // Mostrar ou esconder o formulário de login e a mensagem
      if (type && loginForm && selectTypeMessage && userTypeField) {
        loginForm.classList.remove('hidden');
        selectTypeMessage.classList.add('hidden');
        userTypeField.value = type; // Atualizar o campo oculto do formulário
        
        // Atualizar a URL para incluir o parâmetro user_type sem redirecionar
        const url = new URL(window.location);
        url.searchParams.set('user_type', type);
        window.history.pushState({}, '', url);
      } else if (loginForm && selectTypeMessage) {
        loginForm.classList.add('hidden');
        selectTypeMessage.classList.remove('hidden');
      }
    }
    
    // Event listeners para os botões
    if (therapistBtn) {
      therapistBtn.addEventListener('click', () => setActiveUserType('therapist'));
    }
    if (patientBtn) {
      patientBtn.addEventListener('click', () => setActiveUserType('patient'));
    }
    
    // Verificar se já existe um tipo selecionado na URL ou na sessão para definir o estado inicial
    const urlParams = new URLSearchParams(window.location.search);
    let initialUserType = urlParams.get('user_type');
    
    // Se não estiver na URL, verificar a sessão do Rails (se o campo oculto já foi populado por ela)
    if (!initialUserType && userTypeField && userTypeField.value) {
      initialUserType = userTypeField.value;
    }

    // Se o Devise retornou um erro (flash.alert está presente) e session[:user_type] existe,
    // isso indica uma falha de login, então priorizamos session[:user_type].
    <% if flash[:alert].present? && session[:user_type].present? %>
      // Verificamos se a mensagem de erro é de fato uma falha de login.
      const alertMessage = "<%= j flash[:alert] %>";
      if (alertMessage.includes("Invalid Email or password.") || alertMessage.includes("Usuário ou senha inválidos")) {
        initialUserType = '<%= session[:user_type] %>';
      }
    <% end %>

    if (initialUserType) {
      setActiveUserType(initialUserType);
      // Focar no campo de email se o formulário estiver visível
      if (loginForm && !loginForm.classList.contains('hidden')) {
        const emailInput = loginForm.querySelector('input[name="user[email]"]');
        if (emailInput) {
          emailInput.focus();
        }
      }
    } else {
      // Garante que o formulário esteja oculto se nenhum tipo estiver selecionado inicialmente
       if (loginForm && selectTypeMessage) {
        loginForm.classList.add('hidden');
        selectTypeMessage.classList.remove('hidden');
      }
    }
  });
</script>
