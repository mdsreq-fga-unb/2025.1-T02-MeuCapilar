<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50">
  <!-- Conteúdo principal -->
  <div class="py-12">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Título -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">
          Complete seu Perfil
        </h1>
        <p class="mt-2 text-gray-600">
          Para acessar o sistema, você precisa completar seu perfil profissional
        </p>
      </div>

      <!-- Formulário -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <%= form_for @terapeuta, url: terapeuta_profiles_path, method: :post, html: { class: "space-y-6" } do |form| %>
          
          <!-- Exibição de erros -->
          <% if @terapeuta.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@terapeuta.errors.count, "erro") %> encontrado(s):
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc list-inside space-y-1">
                      <% @terapeuta.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Grid de campos -->
          <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
            <!-- Nome Completo -->
            <div class="sm:col-span-2 mb-4">
              <%= form.label :nome, "Nome Completo *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :nome, 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                  placeholder: "Digite seu nome completo" %>
            </div>

            <!-- CPF -->
            <div class="mb-4">
              <%= form.label :cpf, "CPF *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :cpf, 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                  placeholder: "000.000.000-00" %>
            </div>

            <!-- Telefone -->
            <div class="mb-4">
              <%= form.label :telefone, "Telefone *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :telefone, 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                  placeholder: "(00) 00000-0000" %>
            </div>

            <!-- Especialidade -->
            <div class="sm:col-span-2 mb-4">
              <%= form.label :especialidade, "Especialidade *", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :especialidade, 
                  required: true,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500",
                  placeholder: "Ex: Fisioterapia Capilar, Tricologia" %>
            </div>
          </div>

          <!-- Campo oculto para status (sempre true) -->
          <%= form.hidden_field :status, value: true %>

          <!-- Botão Submit -->
          <div>
            <%= form.submit "Completar Perfil", 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 transition duration-150 ease-in-out" %>
          </div>

        <% end %>

        <!-- Informação adicional -->
        <div class="mt-6 p-4 bg-pink-50 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-pink-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-pink-700">
                <strong>Importante:</strong> Após completar seu perfil, você terá acesso completo ao sistema para gerenciar seus pacientes e atendimentos.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 